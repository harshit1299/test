<div class="container">
<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">News
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">News</li>
            </ol>
        </div>
</div>
</div>
<div style="height: auto; margin-top: 30px; ">
	
	<div class="text-center">	
		<h1 style="font-family:Dosis;color:grey;">
			<%= @news.title %>
		</h1>
                <span><%= @news.created_at %></span>
		<hr style="width:1100px">
		
		<div id="headline container" style="margin-left:40px;margin-right:40px;background-color: rgba(251, 206, 4, 0.28);box-shadow: 0px 0px 9px rgba(0, 0, 0, 0.7), -1px 0px 0px rgba(0, 0, 0, 0.09), 2px 0px 2px rgba(0, 0, 0, 0.09), 0px 2px 0px rgba(0, 0, 0, 0.12);padding-bottom:40px">
<span style="font-size:30px"><center><i class="fa fa-paperclip" style="height:20px"></i></center></span> <!--<img src="images/headline.png" width="75" height="21" class="clearfloat" alt="" />-->
      <div class="row">
      <div class="col-md-3 col-sm-offset-2" style="">
      <div id="news_image" style="margin-top:60px"> <%= image_tag("background.png", alt: "No Image Available", class: "img-responsive img-hover",style:"height:300px;width:550px") %>
      </div>
      </div>
      <div class="col-sm-5 col-xs-offset-1 " style="margin-top:30px;">
      
      <center><p style="font-size: 17px;text-align:left;font-family:Dosis;color:grey;margin-top:30px"><%= @news.description %>
      </p></center>
      </div>
      </div>
     </div>
	<br>	
	<hr>
	<div class="text-center">
		<% if user_signed_in? and current_user.is_admin == true %>
			<%= link_to "Edit", edit_news_path , class: "btn btn-lg btn-red" %>
			<%= link_to "Delete", @news,  method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-lg btn-red" %>
		<% end %>
	</div>	
		
	
</div>
